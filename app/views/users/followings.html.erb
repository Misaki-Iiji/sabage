<div class="mx-auto" style="width: 800px;">
  <div class="col text-center m-4">
    <h2>Followings</h2>
  </div>

  <div class="container-fluid">
    <div class="row">
      <% @users.each do |user| %>
      <div class="col-md-12 m-3 border-top">
        <div class="row m-2">
          <div class="col-2">
            <%= attachment_image_tag user, :image, class: "index_plofile_image m-1ã€€d-flex align-items-center", fallback: "no_profile.jpg" %>
          </div>
          <div class="col-7">
            <%= link_to user.nickname, user_path(user), class: "h4 text-light" %><br>
              main-<%= user.main_gun %>/
              sub-<%= user.sub_gun %><br>
              followings<%= user.followings.count %>/
              followers<%= user.followers.count %>
          </div>
          <div class="col-3">
            <% if current_user.following?(user) %>
              <%= link_to "message", chat_path(user.id), class: "btn btn-dark mb-2 w-100" %>
            <% end %>
            <%= render 'relationships/follow_button', user: user %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div><!--container-->
</div>