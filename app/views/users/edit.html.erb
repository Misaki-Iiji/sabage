<div class="mx-auto" style="width: 600px;">
  <div class="text-center">
    <% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
    <% end %>
  </div>
</div>


<div class="col vh-100">
  <div class="mx-auto" style="width: 500px;">
    <div class="col text-center">

      <h2>ユーザー編集</h2>
      <%= form_with model:@user, local:true do |f| %>
        <div class="field m-3">
          <%= f.label :image %><br>
          <%= f.attachment_field :image, class: "w-100" %>
        </div>
        <div class="field m-3">
          <%= f.label :nickname, "Nickname" %><br />
          <%= f.text_field :nickname, autofocus: true, class: "w-100" %>
        </div>
        <div class="field m-3">
          <%= f.label :profile %><br />
          <%= f.text_field :introduction, class: "w-100" %>
        </div>
        <div class="field m-3">
          <%= f.label :main_gun %><br />
          <%= f.text_field :main_gun, class: "w-100" %>
        </div>
        <div class="field m-3">
          <%= f.label :sub_gun %><br />
          <%= f.text_field :sub_gun, autofocus: true, class: "w-100" %>
        </div>
        <div class="actions">
          <%= f.submit "更新", class: "btn btn-warning w-100 mb-4" %>
        </div>
      <% end %>
      <%= link_to "log out", destroy_user_session_path, class:"btn m-3 text-light", method: :delete %>
      <div class="m-3">
        <% if user_signed_in? && @user.id == current_user.id %>
          <%= link_to "退会する", users_path(current_user), method: :DELETE, "data-confirm" => "本当に退会しますか？" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

