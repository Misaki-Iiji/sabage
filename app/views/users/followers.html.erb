<div class="container">
  <div class="mx-auto">
    <div class="text-center m-4">
      <h2>Followers</h2>
    </div>

      <div class="row">
        <% @users.each do |user| %>
        <div class="col-md-6">
          <div class="row mt-3 mb-3">
            <div class="col-3">
              <%= attachment_image_tag user, :image, class: "index_plofile_image m-1", fallback: "logo.png" %>
            </div>
            <div class="col-6 border-top">
              <%= link_to user.nickname, user_path(user), class: "h4 text-light" %><br>
                main-<%= user.main_gun %>/
                sub-<%= user.sub_gun %><br>
                followings<%= user.followings.count %>/
                followers<%= user.followers.count %>
            </div>
            <div class="col-xs-3 border-top followings_btn">
            <% if current_user.following?(user) %>
              <%= link_to "Message", chat_path(user.id), class: "btn btn-dark mb-2 mr-2 w-100" %>
            <% end %>
            <%= render 'relationships/follow_button', user: user %>
            </div>
          </div>
        </div>
        <% end %>

    </div>

  </div>
</div><!--container-->