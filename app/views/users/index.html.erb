<div class="container">
  <div class="mx-auto">
    <div class="text-center m-4">
      <%= search_form_for @q do |f| %>
        <%= f.search_field :nickname_cont, placeholder: "User" %> <!--_contは検索ワードを含むデータの取得-->
        <%= f.submit "Search" %>
      <% end %>
      </div>

      <div class="row">
        <% @users.each do |user| %>
        <div class="col-md-6">
          <div class="row mt-3">
            <div class="col-3">
              <%= attachment_image_tag user, :image, class: "index_plofile_image m-1", fallback: "logo.png" %>
            </div>
            <div class="col-9 border-top">
              <%= link_to user.nickname, user_path(user), class: "h4" %><br>
                main-<%= user.main_gun %>/
                sub-<%= user.sub_gun %><br>
                followings<%= user.followings.count %>/
                followers<%= user.followers.count %>
            </div>
          </div>
        </div>
        <% end %>

    </div>

  </div>
</div><!--container-->