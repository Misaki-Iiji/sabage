<div class="mx-auto">
  <div class="container message">

    <h3 class="text-left border-bottom m-3"><%= @chat_group.chat_group_name %></h3>
    <% @group_chats.each do |chat| %>
      <% if chat.user_id == current_user.id %>
        <p class="text-right mr-3"><%= chat.message %></p>
      <% else %>
        <%= chat.user.nickname %>
        <p class="text-left ml-3"><%= chat.message %></p>
      <% end %>
    <% end %>
  </div>

    <div class="text-right message_box">
      <%= form_with model: @group_chat, method: :post do |f| %>
        <%= f.text_field :message %>
        <%= f.hidden_field :chat_group_id %>
      <% end %>
    </div>
</div>