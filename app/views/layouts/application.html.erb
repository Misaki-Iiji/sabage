<!DOCTYPE html>
<html>
  <head>
    <title>Hello Survival</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
  <nav class="navbar navbar-expand-lg p-4">
    <ul class="navbar-nav mr-auto">
        <%= link_to "HELLO SURVIVAL" %>
      </li>
    </ul>
    <% if field_signed_in? %>
    <ul class="navbar-nav">
      <li class="nav-item">
        <%= link_to "my field", field_path(current_field), class:"btn m-3 text-light" %>
      </li>
      <li class="nav-item">
        <%= link_to "pictures", post_path(current_field), class:"btn m-3 text-light" %>
      </li>
      <li class="nav-item">
        <%= link_to "ranking", fields_ranking_path, class:"btn m-3 text-light" %>
      </li>
      <li class="nav-item">
        <%= link_to "log out", destroy_field_session_path, class:"btn m-3 text-light", method: :delete %>
      </li>
    <% elsif user_signed_in? %>
      <li class="nav-item">
        <%= link_to image_tag("icon2.png", :size => "25x25"), fields_ranking_path, class:"m-3" %>
      </li>
      <li class="nav-item">
        <%= link_to image_tag("icon3.png", :size => "25x25"), user_path(current_user), class:"m-3" %>
      </li>
    <% else %>
      <li class="nav-item">
        <%= link_to image_tag("icon1.png", :size => "25x25"), homes_about_path, class:"m-3" %>
      </li>
      <li class="nav-item">
        <%= link_to image_tag("icon2.png", :size => "25x25"), fields_ranking_path, class:"m-3" %>
      </li>
      <li class="nav-item">
        <%= link_to image_tag("icon4.png", :size => "25x25"), new_user_session_path, class:"m-3" %>
      </li>
    <% end %>
    </ul>
    </div>
    </header>
    <div class="top"></div> <!--スマホ用top-->
    <main style="min-height: 100vh;">
      <div class="container">
        <div class="row">
          <%= yield %>
        </div>
      </div>
    </main>
    <footer class="d-flex align-items-center justify-content-center text-light">
      © 2021 iijima inc.
    </footer>
  </body>
</html>
