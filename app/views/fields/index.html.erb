<div class="mx-auto" style="width: 800px;">
  <div class="col text-center">

    <%= search_form_for @q do |f| %>
      <%= f.search_field :name_cont, placeholder: "フィールド名" %> <!--_contは検索ワードを含むデータの取得-->
      <%= f.submit "検索" %>
    <% end %>

  <div class="container">
    <div class="row">
      <% @fields.each do |field| %>
        <div class="col-5 border-top m-3">
        <h3><%= link_to field.name, field_path(field), class: "text-light" %></h3>
          <%= attachment_image_tag field, :image, :size => '250x200', fallback: "no_image.jpg" %><br>
          <%= field.address %>
          <div id="favorites_buttons_<%= field.id %>">
            <%= render partial: 'favorites/favorite', locals: { field: field } %>
          </div>

        </div>
      <% end %>
    </div>
  </div>


    <div class="d-flex justify-content-center">
      <%= paginate @fields %>
    <%= link_to "ランキング一覧に戻る", fields_ranking_path, class: "m-3" %>
    </div>
  </div>
</div>
