<div class="mx-auto">
  <div class="text-center">
    <div class="mb-5">
      <%= search_form_for @q do |f| %>
        <%= f.search_field :name_or_introduction_cont, placeholder: "Word", class: "w-50" %> <!--_contは検索ワードを含むデータの取得-->
        <%= f.submit "Search" %>
      <% end %>
    </div>
    <div class="container">
    <div class="row">
      <% @fields.each do |field| %>
        <div class="col-md-4 field_index_box justify-content-flex-start mt-3">
          <%= link_to field_path(field) do %>
            <h4 class="field_index_name"><%= field.name %></h4>
            <%= attachment_image_tag field, :image, :size => '250x200', fallback: "no_image.jpg", class: "field_index_image" %><br>
            <%= field.address %>
          <% end %>
          <div id="favorites_buttons_<%= field.id %>">
            <%= render partial: 'favorites/favorite', locals: { field: field } %>
          </div>

        </div>
      <% end %>
    </div>
    <div class="d-flex justify-content-center">
      <%= paginate @fields %>
    </div>
     <%= link_to "ランキング一覧へ", fields_ranking_path, class: "btn btn-dark m-3" %>
    </div>
  </div>
</div>
