<div class="mx-auto" style="width: 800px;">
  <div class="col text-center">

    <h2><%= @field.name %></h2>
    <div id="favorites_buttons_<%= @field.id %>">
      <%= render 'favorites/favorite', { field: @field } %>
    </div>
    <%= attachment_image_tag @field, :image, :size => '800x400'%><br>
    住所：<%= @field.address %><br>
    <%= simple_format(@field.introduction) %>

     <h3>写真一覧</h3>

    <% if field_signed_in? %>
      <div>
        <%= link_to "写真追加", new_post_path %>
      </div>
    <% end %>

    <table>
      <% if @field.posts.present? %>
        <% @posts.each do |post| %>
        <thead>
          <th>
            <%= post.created_at.strftime('%Y/%m/%d %H:%M')  %>
          </th>
        </thead>
        <tbody>
          <td>
          <% post.pictures.each do |picture| %>
            <%= link_to post_picture_path(picture) do %>
              <%= attachment_image_tag picture, :image, :size => '100x100' %>
            <% end %>
            <%= render 'hits/picture_hits', picture: picture %>
          <% end %>
          </td>
        </tbody>
        <% end %>
      <% else %>
        投稿写真はありません。
      <% end %>
    </table>

  </div>
</div>
