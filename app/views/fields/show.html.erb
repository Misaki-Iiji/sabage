<div class="mx-auto" style="width: 800px;">
  <div class="col text-center">
    <h2>
      <%= @field.name %>
      <% if current_field == @field %>
          <%= link_to image_tag("icon5.png", :size => "25x25"), edit_field_path(current_field), class:"m-2" %>
      <% end %>
    </h2>

    <div id="favorites_buttons_<%= @field.id %>">
      <%= render 'favorites/favorite', field: @field %>
    </div>

    <%= attachment_image_tag @field, :image, :size => '800x400'%><br>
    住所：<%= @field.address %><br>
    <%= simple_format(@field.introduction) %>
  </div>
</div>

<div class="container m-5">
  <h3 class="text-center">
    Phots
    <% if current_field == @field %>
        <%= link_to image_tag("icon3.png", :size => "25x25"), new_post_path %>
    <% end %>
  </h3>
  <div class="row">
  <% if @field.posts.present? %>
    <% @posts.each do |post| %>
        <%= post.created_at.strftime('%Y/%m/%d') %><br>
          <% post.pictures.each do |picture| %>
            <%= link_to post_picture_path(picture) do %>
              <%= attachment_image_tag picture, :image, :size => '100x100', class: "m-1" %>
            <% end %>
            <div id="likes_buttons_<%= picture.id %>">
              <%= render 'picture_hits/picture_hits', picture: picture, post: post %>
            </div>
          <% end %>
        <% end %>
      <% else %>
        投稿写真はありません。
      <% end %>
    <div class="d-flex justify-content-center">
      <%= paginate @posts %>
    </div>
  </div>
</div>
