<div class="mx-auto">
  <div class="text-center">

    <h2>パスワードを</br>忘れた場合</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "fields/shared/error_messages", resource: resource %>

      <div class="field m-3">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100" %>
      </div>

      <div class="actions m-3">
        <%= f.submit "リセット", class: "w-100" %>
      </div>
    <% end %>

    <%= render "fields/shared/links" %>
  </div>
</div>
