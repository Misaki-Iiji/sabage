<div class="mx-auto">

  <div class="text-center">
    <h2>RANKING</h2>
  </div>

  <div class="contaner m-5">
    <% @all_ranks.each.with_index(1) do |field, i| %>
    <h3 class="ml-5"><%= i %>位</h3>
    <div class="row mx-auto border-top align-items-center ranking_field">
      <div  class="col-sm-4 ranking_field_image">
        <%= attachment_image_tag field, :image, fallback: "no_image.jpg", :size => '260x160', fallback: "no_image.jpg" %>
      </div>
      <div class="col-sm-8">
        <h3 class="mt-2"><%= link_to field.name, field_path(field), class: "text-light" %></h3>
        <%= simple_format(field.introduction) %>
        <div id="favorites_buttons_<%= field.id %>">
          <%= render partial: 'favorites/favorite', locals: { field: field } %>
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <div class="d-flex justify-content-center m-5">
    <%= link_to 'フィールド一覧', fields_path, class: "btn btn-dark m-3" %>
  </div>

</div>
