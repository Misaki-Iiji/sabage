<div class="mx-auto" style="width: 800px;">

  <div class="text-center">
    <h2>RANKING</h2>
  </div>

  <div class="contaner">
    <% @all_ranks.each.with_index(1) do |field, i| %>
    <h3 class="ml-5">第<%= i %>位</h3>
    <div class="row mx-auto border-top align-items-center">
      <div  class="col-4">
        <%= attachment_image_tag field, :image, fallback: "no_image.jpg", :size => '260x160', fallback: "no_image.jpg" %>
      </div>
      <div class="col-8">
        <%= link_to field.name, field_path(field), class: "text-light h2" %><br>
        <%= simple_format(field.introduction) %>
        <div id="favorites_buttons_<%= field.id %>">
          <%= render partial: 'favorites/favorite', locals: { field: field } %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-center m-5">
    <%= link_to '全てのフィールドをみる', fields_path, class: "btn btn-dark m-3" %>
  </div>
</div>
