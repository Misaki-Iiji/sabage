<div class="col vh-100">
  <div class="mx-auto" style="width: 500px;">
    <div class="col text-center">

    <h2>フィールドログイン</h2>

    <%= form_with model: @field, url: field_session_path, local: true do |f| %>
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value) %>
      <% end %>

      <div class="field m-3">
        <%= f.label :Eメール %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100" %>
      </div>

      <div class="field m-3">
        <%= f.label :パスワード %>
       <span>(6文字以上)</span><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "w-100" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field m-3">
          <%= f.check_box :remember_me %>
          <%= f.label :ログイン状態を保存 %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-warning text-center w-100 mb-4 login" %>
      </div>
    <% end %>

    <div class="text-center">
      <p>登録がまだの方はこちら</p>
      <div class="col text-center">
        <%= render "fields/shared/links" %>
      </div>
    </div>

    </div>
  </div>
</div>