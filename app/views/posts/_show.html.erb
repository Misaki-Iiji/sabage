<h2>Posts#show</h2>

<% if field_signed_in? %>
  <div>
    <%= link_to "写真追加", new_post_path %>
  </div>
<% end %>

<table>
  <% if field.posts.present? %>
    <% posts.each do |post| %>
    <thead>
      <th>
        <%= post.created_at.strftime('%Y/%m/%d %H:%M')  %>
      </th>
    </thead>
    <tbody>
      <td>
      <% post.pictures.each do |picture| %>
        <%= link_to field_path(post) do %>
          <%= attachment_image_tag picture, :image, class: "default_image", :size => '100x100' %>
        <% end %>
      <% end %>
      </td>
    </tbody>
    <% end %>
  <% else %>
    投稿写真はありません。
  <% end %>
</table>