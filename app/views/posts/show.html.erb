<div class="col vh-100">

<h2>Posts#show</h2>
<div>
  <%= link_to "写真追加", new_post_path %>
</div>
<table>
  <% if current_field.posts.present? %>
    <% @posts.each do |post| %>
    <thead>
      <th>
        <%= post.created_at.strftime('%Y/%m/%d %H:%M')  %>
      </th>
    </thead>
    <tbody>
      <td>
      <% post.pictures.each do |picture| %>
        <%= link_to  post_picture_path(picture) do %>
          <%= attachment_image_tag picture, :image, class: "default_image mb-1", :size => '200x200' %>
        <% end %>
      <% end %>
  <!--いいねここから-->
  <% if user_signed_in? %>
     <% if @picture.hitted_by?(current_user) %>
        <p>
          <%= link_to post_picture_hit_path(@picture), method: :delete do %>
            ♥<%= @picture.favorites.count %> ヒット
          <% end %>
        </p>
        <% else %>
        <p>
          <%= link_to post_picture_hit_path(@picture), method: :post do %>
            ♡<%= @picture.favorites.count %> ヒット
          <% end %>
        </p>
      <% end %>
    <% end %>
  <!--いいねここまで-->

      </td>
    </tbody>
    <% end %>
  <% else %>
    投稿写真はありません。
  <% end %>
</table>
</div>