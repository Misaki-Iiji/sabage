<div class="mx-auto chat_area">
  <div class="message">

    <h3 class="text-left border-bottom m-3"><%= @user.nickname %></h3>
    <% @chats.each do |chat| %>
      <% if chat.user_id == current_user.id %>
        <p class="text-right mr-3">
          <%= chat.created_at.strftime('%Y/%m/%d %H:%M') %></p>
          <p class="text-right mr-3"><%= chat.message %></p>
      <% else %>
        <p class="text-left ml-3">
          <%= chat.created_at.strftime('%Y/%m/%d %H:%M') %></p>
          <p class="text-left ml-3"><%= chat.message %></p>
      <% end %>
    <% end %>
  </div>

  <div class="text-right">
    <%= form_with model: @chat do |f| %>
      <%= f.text_field :message %>
      <%= f.hidden_field :room_id %>
      <%= f.hidden_field :visited_id, :value => @user.id %>
    <% end %>
  </div>

  <div class="d-flex justify-content-center">
    <%= paginate @chats %>
  </div>
</div>